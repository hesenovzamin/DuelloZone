extends layouts/zonelayout.pug
block body
 .page-heading
  .container
    .row
      .col-md-10.offset-md-1
        h1.page-heading__title
          | Your 
          span.highlight Account
        ol.page-heading__breadcrumb.breadcrumb
          li.breadcrumb-item
            a(href='index.html') Home
          li.breadcrumb-item
            a(href='shop-grid.html') Shop
          li.breadcrumb-item.active(aria-current='page') Your Account
 // Page Heading / End
 //
  Content
  ==================================================
 .site-content
  .container
    .row
      .col-lg-4
        // Account Navigation
        .card
          .card__header
            h4 Welcome Back!
          .card__content
            nav.df-account-navigation
              ul
                li.df-account-navigation__link
                  a(href='#') Personal Information
                li.df-account-navigation__link
                  a(href='#') Billing Information
                li.df-account-navigation__link
                  a(href='#') Shipping Information
        // Account Navigation / End
      .col-lg-8
        // Personal Information
        .card.card--lg
          .card__header
            h4 Personal Information
          .card__content
            form.df-personal-info(action='#')
              .row
                .col-md-6
                  .form-group
                    label(for='account-email') Email
                    input#account-email.form-control(type='email' value='' name='account-email' placeholder='jamesgirobilli@yourmail.com')
              .row
                .col-md-6
                  .form-group
                    label(for='account-password') Change Password
                    input#account-password.form-control(type='password' value='' name='account-password' placeholder='**********')
                .col-md-6
                  .form-group
                    label(for='account-password-repeat') Repeat Password
                    input#account-password-repeat.form-control(type='password' value='' name='account-password-repeat' placeholder='**********')
              .row
                .col-md-6
                  .form-group
                    label(for='account-first-name') First Name
                    input#account-first-name.form-control(type='text' value='' name='account-first-name' placeholder='Your first name...')
                .col-md-6
                  .form-group
                    label(for='account-last-name') Last Name
                    input#account-last-name.form-control(type='text' value='' name='account-last-name' placeholder='Your last name...')
              .form-group.form-group--sm
                label(for='account-address-1') Full Address
                input#account-address-1.form-control(type='text' value='' name='account-address-1' placeholder='Enter your street address...')
              .form-group
                input#account-address-2.form-control(type='text' value='' name='account-address-2' placeholder='Enter your apartment, floor, suite, etc...')
              .form-group
                label(for='account-country') Country
                select#account-country.form-control(name='account-country')
                  option(value='0') Select your country...
                  option(value='Canada') Canada
                  option(value='Italy') Italy
                  option(value='Spain') Spain
                  option(value='Greece') Greece
              .row
                .col-md-6
                  .form-group
                    label(for='account-city') State or City
                    select#account-city.form-control(name='account-city')
                      option(value='0') Select your state or city...
                      option(value='1') New York
                      option(value='2') Barcelona
                      option(value='3') Paris
                      option(value='4') London
                .col-md-6
                  .form-group
                    label(for='account-postcode') Zip Code
                    input#account-postcode.form-control(type='text' name='account-postcode' placeholder='Your zip or postal code...')
              .form-group--submit
                button.btn.btn-default.btn-lg.btn-block(type='submit')
                  | See all the
                  | changes
        // Personal Information / End
