extends layouts/zonelayout.pug
block body
 .page-heading
  .container
    .row
      .col-md-10.offset-md-1
        h1.page-heading__title
          | Your 
          span.highlight Team
        ol.page-heading__breadcrumb.breadcrumb
          li.breadcrumb-item
            a(href='/home') Home

          li.breadcrumb-item.active(aria-current='page') Your Team
 // Page Heading / End
 //
  Content
  ==================================================
 .site-content
  .container
    .row
      //- .col-lg-4
      //-   // Account Navigation
      //-   .card
      //-     .card__header
      //-       h4 Welcome Back!
      //-     .card__content
      //-       nav.df-account-navigation
      //-         ul
      //-           li.df-account-navigation__link
      //-             a(href='#') Personal Information
      //-           li.df-account-navigation__link
      //-             a(href='#') Billing Information
      //-           li.df-account-navigation__link
      //-             a(href='#') Shipping Information
      //-   // Account Navigation / End
      

      .col-lg-12
        // Personal Information
        if (action !== "empty")
         .alert.alert-primary(role='alert' style='font-size: 17px; color:white;')
          | #{action}
        .card.card--lg
          .card__header
            h4 Add Teammate
          .card__content
            form.df-personal-info(method='POST' action='/addteammate')
              .row
                .col-md-6
                  .form-group
                    label(for='account-email') Username
                    input#account-email.form-control(type='text' value='' name='teammate' placeholder=`add Team Mate Username`)
              .form-group--submit
                button.btn.btn-default.btn-lg.btn-block(type='submit')
                  | Add Team Mates
            form.df-personal-info(method='POST' action='/updatepassword' style='margin-top:5%;')
              .row
                .col-md-6
                  .form-group
                    label(for='account-password') Change Password
                    input#account-password.form-control(type='password'  value='' name='account_password' placeholder='**********')
                .col-md-6
                  .form-group
                    label(for='account-password-repeat') Repeat Password
                    input#account-password-repeat.form-control(type='password'  value='' name='account_password_repeat' placeholder='**********')
              .form-group--submit
                button.btn.btn-default.btn-lg.btn-block(type='submit')
                  | Change Password
        // Personal Information / End
